@model MunTea.Models.ThucDon

@{
    ViewBag.Title = "Sua";
    Layout = "~/Views/Shared/khungTrangQuanLy.cshtml";
}

<h2 style="text-align:center; color:beige;">Sửa nhân viên</h2>

@using (Html.BeginForm("Sua", "ThucDon", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <form>
        <h4 style="color:beige">Nhập thông tin thực đơn</h4>
        <div class="form-group">
            <label for="mymathucdon" style="color:beige">Mã thực đơn</label>
            <input value="@Model.MaThucDon" type="text" class="form-control" name="MaThucDon" id="mymathucdon" placeholder="Tên thực đơn">
        </div>
        <div class="form-group">
            <label for="mytenthucdon" style="color:beige">Tên thực đơn</label>
            <input value="@Model.TenThucDon" type="text" class="form-control" name="TenThucDon" id="mytenthucdon" placeholder="Tên thực đơn">
        </div>

        <div class="form-row">
            <div class="form-group col-sm-6">
                <label style="color:beige" for="mysize">Size</label>
                <input value="@Model.Size" type="text" class="form-control" id="mysize" placeholder="Size" name="Size">
            </div>
            <div class="form-group col-sm-6">
                <label style="color:beige" for="mygiatien">Giá tiền</label>
                <input value="@Model.GiaTien" type="number" class="form-control" id="mygiatien" placeholder="Giá tiền" name="GiaTien">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-sm-3">
                <label style="color:beige" for="myhinhanh">Hình ảnh</label>
                <input class="form-control" id="myhinhanh" type="file" name="fileupload" />
                @ViewBag.thongbao
            </div>
            <div class="form-group col-sm-9">
                <label style="color:beige">Tên loại thực đơn</label>
                @Html.DropDownList("maloaithucdon", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <p>
            <button type="submit" class="btn btn-success">Lưu thực đơn</button>
        </p>
    </form>
}@{Html.EndForm();}

<div>
    @Html.ActionLink("Trở về", "HienDanhSach", "ThucDon", new { @class = "btn btn-primary" })
</div>