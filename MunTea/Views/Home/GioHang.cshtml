@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/khungTrangKhachHang.cshtml";
}
@using MunTea.Models;
@model List<GioHang>
<h2 style="color:beige;text-align:center">Giỏ hàng</h2>

<div class="card border-dark">
    <table class="table">
        <tr style="background-color:lightblue">
            <th>Mã </th>
            <th>Tên</th>
            <th>Size</th>
            <th>Hình ảnh</th>
            <th>Số lượng</th>
            <th>Giá tiền</th>
            <th>Thành tiền</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.mathucdon</td>
                <td>@item.tenthucdon</td>
                <td>@item.size</td>
                <td><img src="/HinhAnh/ThucDon/@item.hinhanh" style="width:auto;height:100px"></td>
                <td>@item.soluong</td>
                <td>@String.Format("{0:0,0}", item.giatien)</td>
                <td>@String.Format("{0:0,0}", item.thanhtien)</td>
                <td><a href="/Home/XoaGioHang/@item.mathucdon">Xoa</a></td>
            </tr>
        }
        <tr style="background-color:lightyellow">
            <td colspan="3" style="color:blue; font-weight:bold; text-align:right;">Tổng cộng:</td>
            <td style="color:red; font-weight:bold;">@ViewBag.TongSoLuong </td>
            <td></td>
            <td style="color:red; font-weight:bold;">@String.Format("{0:0,0}", ViewBag.ThanhTien) VNĐ</td>
            <td>
                <a href="/Home/DatHang/">
                    <input type="submit" value="Đặt hàng" class="btn btn-danger" />
                </a>
            </td>   
        </tr>
    </table>
</div>
